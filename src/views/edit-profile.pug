extends base.pug

block content   
    img(src="/"+loggedInUser.avataUrl,width="100",height="100")
    form(method="POST",enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avatar", name="avatar", accept="image/*")
        input(placeholder="Name",name="name",type = "name", required,value=loggedInUser.name)
        input(placeholder="Email",name="email",type = "email", required,value=loggedInUser.email)
        input(placeholder="UserName",name="username",type = "username", required,value=loggedInUser.username)
        input(placeholder="Location",name="location",type = "location", required,value=loggedInUser.location)
        input(type="submit",value="Update Profile")
        if !loggedInUser.socialOnly
        hr 
        a(href="change-password") Change Password